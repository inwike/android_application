<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"> <!-- this shape is used as shadow -->
            <padding android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
            <solid android:color="#f0026eac"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"> <!-- this is for dialog frame -->
            <corners android:radius="15dp"/>
            <stroke android:color="#ffffff" android:width="2dp" />
            <gradient android:angle="90"
                android:startColor="#d0E4f5"
                android:centerColor="#c9e4f5"
                android:endColor="#d0E4f5"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>